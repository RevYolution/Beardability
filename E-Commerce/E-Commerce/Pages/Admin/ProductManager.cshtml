@page
@model E_Commerce.Pages.Admin.ProductManagerModel
@{
    
    int counter = 0;
}

@if (User.IsInRole("Admin"))
{
    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>Product Manager</title>
    </head>
    <body>
        <h1>All Products</h1>
        <a asp-page="AddProduct">Add New Product</a>
        <div class="container">
            <div >
                @foreach (var product in Model.Products)
                {
                    if (counter != 0 && counter % 3 == 0)
                    {
                    @:</div>
                    @:<div class="row" id="shopping_product_row">
                    }
                    <div class="col-sm-4" id="shopping_products">
                        <h3>@Html.DisplayFor(productitem => product.Name)</h3>
                        <img src="@Html.DisplayFor(productitem => product.Image)" />
                        <p>Price: $@Html.DisplayFor(productitem => product.Price)</p>
                        <a asp-page="ShoppingDetail" asp-route-id="@product.ID">Details</a>
                    </div>
                    counter++;
                }
            </div>
        </div>
    </body>
    </html>
}
else
{
    throw new Exception("404 not found");
}