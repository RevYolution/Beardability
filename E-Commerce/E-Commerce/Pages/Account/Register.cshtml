@page
@model E_Commerce.Pages.Account.RegisterModel
@{
    Layout = "_AdminLayout";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Register Page</title>
</head>
<body>

    <div class="container">
        <div class="card-deck row" id="register_deck">
            <div class="card mx-auto" style="max-width: 32em" id="register_card">
                <form method="post">
                    <div class="form-row">
                        <div class="form-group col-lg-10">
                            <label asp-for="Input.Email">Email</label>
                            <input asp-for="Input.Email" type="text" class="form-control" placeholder="Email@email.com" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Input.FirstName">First Name</label>
                            <input asp-for="Input.FirstName" class="form-control" type="text" placeholder="First Name" />
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Input.LastName">Last Name</label>
                            <input asp-for="Input.LastName" class="form-control" type="text" placeholder="Last Name" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md">
                            <label asp-for="Input.DOB">Birthday</label>
                            <input asp-for="Input.DOB" class="form-control" id="dob_input" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md">
                            <label asp-for="Input.PhoneNumber">Phone Number</label>
                            <input asp-for="Input.PhoneNumber" class="form-control" type="text" id="phone_input" placeholder="800-555-888" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Input.Password">Password</label>
                            <input asp-for="Input.Password" class="form-control" type="password" />
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Input.PasswordConfirmation">Confirm Password</label>
                            <input asp-for="Input.PasswordConfirmation" class="form-control" type="password" />
                        </div>
                    </div>
                    <button type="submit" id="register_button">Register Account</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>